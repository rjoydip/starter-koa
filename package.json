{
  "name": "starter-koa",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@9.12.0",
  "description": "Koa application starter",
  "author": "Joydip Roy <joydipand@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/rjoydip",
  "homepage": "https://github.com/rjoydip/starter-koa#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/starter-koa.git"
  },
  "bugs": "https://github.com/rjoydip/starter-koa/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22",
    "pnpm": ">=9",
    "typescript": ">=5.5"
  },
  "scripts": {
    "all": "nr _update && nr lint && nr typecheck && nr build && nr test",
    "_update": "taze -w -f -w -i",
    "build": "unbuild",
    "lint": "eslint . --fix",
    "start": "node --env-file=.env.production dist/index.mjs",
    "dev": "tsx watch --env-file=.env.dev src/index.ts",
    "test": "vitest run --typecheck --coverage",
    "benchmark": "autocannon -c 1 -d 10 -p 1 127.0.0.1:3000/health",
    "benchmark:doctor": "clinic doctor --on-port 'autocannon -c 10 -d 10 -p 10 127.0.0.1:3000/health' -- node --env-file=.env.test dist/index.mjs",
    "benchmark:flame": "clinic flame --on-port 'autocannon -c 10 -d 10 -p 10 127.0.0.1:3000/health' -- node --env-file=.env.test dist/index.mjs",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "prepare": "simple-git-hooks",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@neondatabase/serverless": "^0.9.5",
    "@sentry/node": "^8.33.0",
    "@sentry/profiling-node": "^8.33.0",
    "better-auth": "^0.3.1",
    "close-with-grace": "^2.1.0",
    "confbox": "^0.1.7",
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "drizzle-graphql": "^0.8.5",
    "drizzle-orm": "^0.33.0",
    "drizzle-valibot": "^0.2.0",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.7.0",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "koa-helmet": "^7.0.2",
    "koa-ratelimit": "^5.1.0",
    "koa-router": "^13.0.1",
    "sentry-integration-libsql-client": "^1.3.0",
    "valibot": "1.0.0-beta.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@libsql/core": "^0.14.0",
    "@scalar/types": "^0.0.11",
    "@types/bun": "^1.1.10",
    "@types/deno": "^2.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/koa": "^2.15.0",
    "@types/koa-ratelimit": "^5.0.5",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^22.7.4",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.2",
    "autocannon": "^7.15.0",
    "clinic": "^13.0.0",
    "drizzle-kit": "^0.24.2",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "lint-staged": "^15.2.10",
    "pnpm": "^9.12.0",
    "rollup": "^4.24.0",
    "simple-git-hooks": "^2.11.1",
    "supertest": "^7.0.0",
    "taze": "^0.17.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "unbuild": "^2.0.0",
    "vitest": "^2.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
