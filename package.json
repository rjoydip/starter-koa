{
  "name": "starter-koa",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@9.12.3",
  "description": "Koa application starter. Simple & logical separation on single file",
  "author": "Joydip Roy <joydipand@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/rjoydip",
  "homepage": "https://github.com/rjoydip/starter-koa#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/starter-koa.git"
  },
  "bugs": "https://github.com/rjoydip/starter-koa/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20",
    "pnpm": ">=9",
    "typescript": ">=5.5"
  },
  "scripts": {
    "_setup": "nr _update && nr lint && nr typecheck && nr build && nr test",
    "_update": "taze -w -f -w -i",
    "build": "unbuild",
    "lint": "eslint . --fix",
    "start": "node --env-file=.env dist/index.mjs",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "test": "vitest run --typecheck --coverage --coverage.include=src",
    "benchmark": "tsx --env-file=.env scripts/_benchmark.ts",
    "prepare": "simple-git-hooks",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@lukeed/uuid": "^2.0.1",
    "@sentry/node": "^8.37.0",
    "@sentry/profiling-node": "^8.37.0",
    "@trpc/server": "^10.45.2",
    "close-with-grace": "^2.1.0",
    "confbox": "^0.1.8",
    "consola": "^3.2.3",
    "crossws": "^0.3.1",
    "db0": "^0.2.1",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.8.0",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "koa-helmet": "^7.0.2",
    "koa-ratelimit": "^5.1.0",
    "koa-router": "^13.0.1",
    "ohash": "^1.1.4",
    "pify": "^6.1.0",
    "query-string": "^9.1.1",
    "unstorage": "^1.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@dotenvx/dotenvx": "^1.22.0",
    "@faker-js/faker": "^9.2.0",
    "@scalar/types": "^0.0.11",
    "@stepci/runner": "^2.0.7",
    "@trpc/client": "^10.45.2",
    "@types/autocannon": "^7.12.5",
    "@types/bun": "^1.1.13",
    "@types/deno": "^2.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/koa": "^2.15.0",
    "@types/koa-ratelimit": "^5.0.5",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.4",
    "autocannon": "^7.15.0",
    "drizzle-kit": "^0.24.2",
    "esbuild": "^0.24.0",
    "get-port": "^7.1.0",
    "graphql-tag": "^2.12.6",
    "lint-staged": "^15.2.10",
    "openapi-schema-validator": "^12.1.3",
    "rollup": "^4.24.4",
    "simple-git-hooks": "^2.11.1",
    "stepci": "^2.8.2",
    "supertest": "^7.0.0",
    "supertest-graphql": "^1.1.4",
    "taze": "^0.17.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0",
    "vitest": "^2.1.4",
    "ws": "^8.18.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
