{
  "name": "starter-koa",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "bun@1.1.30",
  "description": "Koa application starter",
  "author": "Joydip Roy <joydipand@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/rjoydip",
  "homepage": "https://github.com/rjoydip/starter-koa#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/starter-koa.git"
  },
  "bugs": "https://github.com/rjoydip/starter-koa/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20",
    "deno": ">=1.40",
    "bun": ">=1.1.20",
    "typescript": ">=5.5"
  },
  "scripts": {
    "all": "bun update --latest && nr lint && nr typecheck && nr build && nr test",
    "build": "NODE_ENV=production unbuild",
    "lint": "eslint . --fix",
    "start": "node --env-file=.env.production dist/index.mjs",
    "dev": "tsx watch --env-file=.env.dev src/index.ts",
    "test": "vitest run --typecheck --coverage",
    "benchmark": "autocannon -c 1 -d 10 -p 1 127.0.0.1:3000/health",
    "benchmark:doctor": "clinic doctor --on-port 'autocannon -c 10 -d 10 -p 10 127.0.0.1:3000/health' -- node --env-file=.env.test dist/index.mjs",
    "benchmark:flame": "clinic flame --on-port 'autocannon -c 10 -d 10 -p 10 127.0.0.1:3000/health' -- node --env-file=.env.test dist/index.mjs",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.7",
    "@sentry/node": "^8.31.0",
    "@sentry/profiling-node": "^8.31.0",
    "close-with-grace": "^2.1.0",
    "consola": "^3.2.3",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "koa-helmet": "^7.0.2",
    "koa-ratelimit": "^5.1.0",
    "koa-router": "^13.0.1",
    "valibot": "^0.42.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.1",
    "@types/bun": "^1.1.10",
    "@types/deno": "^2.0.0",
    "@types/koa": "^2.15.0",
    "@types/koa-ratelimit": "^5.0.5",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^22.7.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.1",
    "autocannon": "^7.15.0",
    "clinic": "^13.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "lint-staged": "^15.2.10",
    "simple-git-hooks": "^2.11.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "unbuild": "^2.0.0",
    "vitest": "^2.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
